@page
@model ResendEmailConfirmationModel
@{
    Layout = "";
    ViewData["Title"] = "Resend email confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>Intranet</title>


    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->


    <link rel="apple-touch-icon" sizes="180x180" href="~/img/icons/logo.jpg">
    <link rel="icon" type="image/jpg" sizes="32x32" href="~/img/icons/logo.jpg">
    <link rel="icon" type="image/jpg" sizes="16x16" href="~/img/icons/logo.jpg">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/icons/logo.jpg">
    <link rel="manifest" href="~/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/img/icons/logo.jpg">
    <meta name="theme-color" content="#ffffff">
    <script src="~/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/vendors/simplebar/simplebar.min.js"></script>
    <script src="~/js/config.js"></script>


    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->

    <link href="~/vendors/choices/choices.min.css" rel="stylesheet">
    <link href="~/vendors/dhtmlx-gantt/dhtmlxgantt.css" rel="stylesheet">
    <link href="~/vendors/flatpickr/flatpickr.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">
    <link href="~/vendors/simplebar/simplebar.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="~/css/theme-rtl.min.css" type="text/css" rel="stylesheet" id="style-rtl">
    <link href="~/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">
    <link href="~/css/user-rtl.min.css" type="text/css" rel="stylesheet" id="user-style-rtl">
    <link href="~/css/user.min.css" type="text/css" rel="stylesheet" id="user-style-default">
    <script>
        var phoenixIsRTL = JSON.parse(localStorage.getItem('phoenixIsRTL'));
        if (phoenixIsRTL) {
            var linkDefault = document.getElementById('style-default');
            var userLinkDefault = document.getElementById('user-style-default');
            linkDefault.setAttribute('disabled', true);
            userLinkDefault.setAttribute('disabled', true);
            document.querySelector('html').setAttribute('dir', 'rtl');
        } else {
            var linkRTL = document.getElementById('style-rtl');
            var userLinkRTL = document.getElementById('user-style-rtl');
            linkRTL.setAttribute('disabled', true);
            userLinkRTL.setAttribute('disabled', true);
        }
    </script>
</head>
<body>
    <div class="container-fluid px-0">
        <div class="container">
            <div class="row flex-center min-vh-100 py-5">
                <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3">
                    <a class="d-flex flex-center text-decoration-none mb-4" href="#">
                        <div class="d-flex align-items-center fw-bolder fs-5 d-inline-block">
                            <img src="~/img/icons/logo.jpg" alt="phoenix" width="58" />
                        </div>
                    </a>
                    <div class="text-center mb-6">
                        <h4 class="text-1000">Reenvío de correo de confirmación</h4>
                        <p class="text-700">Ingrese su correo registrado</p>
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                            <div class="mt-5">
                                <input asp-for="Input.Email" class="form-control mb-2" aria-required="true" placeholder="nombre@dominio.com" />
                                @*<label asp-for="Input.Email" class="form-label"></label>*@
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="text-center"> <a class="fs--1 fw-bold" asp-area="Identity" asp-page="/Account/Login">Regresar al inicio sesión</a></div>
                            <button type="submit" class="btn btn-primary w-100">Reenviar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
<!-- ===============================================-->
<!--    JavaScripts-->
<!-- ===============================================-->
<script src="~/vendors/popper/popper.min.js"></script>
<script src="~/vendors/bootstrap/bootstrap.min.js"></script>
<script src="~/vendors/anchorjs/anchor.min.js"></script>
<script src="~/vendors/is/is.min.js"></script>
<script src="~/vendors/fontawesome/all.min.js"></script>
<script src="~/vendors/lodash/lodash.min.js"></script>
<script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
<script src="~/vendors/list.js/list.min.js"></script>
<script src="~/vendors/feather-icons/feather.min.js"></script>
<script src="~/vendors/dayjs/dayjs.min.js"></script>
<script src="~/vendors/choices/choices.min.js"></script>
<script src="~/vendors/echarts/echarts.min.js"></script>
<script src="~/vendors/dhtmlx-gantt/dhtmlxgantt.js"></script>
<script src="~/js/phoenix.js"></script>
<script src="~/js/projectmanagement-dashboard.js"></script>


