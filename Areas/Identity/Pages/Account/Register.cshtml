@page
@model RegisterModel
@{
    Layout = "";
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- ===============================================-->
    <!--    Document Title-->
    <!-- ===============================================-->
    <title>Intranet</title>


    <!-- ===============================================-->
    <!--    Favicons-->
    <!-- ===============================================-->


    <link rel="apple-touch-icon" sizes="180x180" href="~/img/icons/logo.jpg">
    <link rel="icon" type="image/jpg" sizes="32x32" href="~/img/icons/logo.jpg">
    <link rel="icon" type="image/jpg" sizes="16x16" href="~/img/icons/logo.jpg">
    <link rel="shortcut icon" type="image/x-icon" href="~/img/icons/logo.jpg">
    <link rel="manifest" href="~/img/favicons/manifest.json">
    <meta name="msapplication-TileImage" content="~/img/icons/logo.jpg">
    <meta name="theme-color" content="#ffffff">
    <script src="~/vendors/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/vendors/simplebar/simplebar.min.js"></script>
    <script src="~/js/config.js"></script>


    <!-- ===============================================-->
    <!--    Stylesheets-->
    <!-- ===============================================-->

    <link href="~/vendors/choices/choices.min.css" rel="stylesheet">
    <link href="~/vendors/dhtmlx-gantt/dhtmlxgantt.css" rel="stylesheet">
    <link href="~/vendors/flatpickr/flatpickr.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&amp;display=swap" rel="stylesheet">
    <link href="~/vendors/simplebar/simplebar.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link href="~/css/theme-rtl.min.css" type="text/css" rel="stylesheet" id="style-rtl">
    <link href="~/css/theme.min.css" type="text/css" rel="stylesheet" id="style-default">
    <link href="~/css/user-rtl.min.css" type="text/css" rel="stylesheet" id="user-style-rtl">
    <link href="~/css/user.min.css" type="text/css" rel="stylesheet" id="user-style-default">
    <script>
        var phoenixIsRTL = JSON.parse(localStorage.getItem('phoenixIsRTL'));
        if (phoenixIsRTL) {
            var linkDefault = document.getElementById('style-default');
            var userLinkDefault = document.getElementById('user-style-default');
            linkDefault.setAttribute('disabled', true);
            userLinkDefault.setAttribute('disabled', true);
            document.querySelector('html').setAttribute('dir', 'rtl');
        } else {
            var linkRTL = document.getElementById('style-rtl');
            var userLinkRTL = document.getElementById('user-style-rtl');
            linkRTL.setAttribute('disabled', true);
            userLinkRTL.setAttribute('disabled', true);
        }
    </script>
</head>
<body>

    <div class="container-fluid px-0">
        <div class="container">
            <div class="row flex-center min-vh-100 py-5">
                <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3">
                    <a class="d-flex flex-center text-decoration-none mb-4" href="../../../index.html">
                        <div class="d-flex align-items-center fw-bolder fs-5 d-inline-block">
                            <img src="~/img/icons/logo.jpg" alt="phoenix" width="58" />
                        </div>
                    </a>
                    @*<div class="text-center mb-7">
                    <h3 class="text-1000">Registro</h3>
                    <p class="text-700">Crea tu cuenta</p>
                    </div>*@
                    <div class="position-relative mt-4">
                        <hr class="bg-200" />
                        <div class="divider-content-center">Ingresa la información solicitada</div>
                    </div>
                    
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label" for="name">NOMBRE</label>
                                <div class="form-icon-container">
                                    <input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" type="text" aria-required="true" placeholder="Jhon" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="name">APELLIDO</label>
                                <div class="form-icon-container">
                                    <input asp-for="Input.LastName" class="form-control" autocomplete="lastname" type="text" aria-required="true" placeholder="Smith" />
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 text-start">
                            <label class="form-label" for="email">DIRECCIÓN DE CORREO ELECTRÓNICO</label>
                            <div class="form-icon-container">
                                <input asp-for="Input.Email" class="form-control form-icon-input" autocomplete="username" type="email" aria-required="true" placeholder="nombre@dominio.com" /><span class="fas fa-user text-900 fs--1 form-icon"></span>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label class="form-label" for="name">CONTRASEÑA</label>
                                <div class="form-icon-container">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="off" type="password" aria-required="true" placeholder="contraseña" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" for="name">CONFIRMAR CONTRASEÑA</label>
                                <div class="form-icon-container">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="off" type="password" aria-required="true" placeholder="confirmación" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" id="termsService" type="checkbox" />
                            <label class="form-label fs--1 text-none" for="termsService">Acepto los <a href="#!">términos </a>y <a href="#!">política de privacidad</a></label>
                        </div>

                        <div class="text-center"> <a class="fs--1 fw-bold" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión en una cuenta existente</a></div>
                        
                        
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registro</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
